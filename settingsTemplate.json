{    
    "index_patterns": "testlogstash*",
    "settings": {
        "index.refresh_interval": "5s",
        "number_of_shards": 2,
        "number_of_replicas": 0,
        "analysis": {
            "filter": {
                "spanish_stop": {
                    "type": "stop",
                    "stopwords": "_spanish_"
                },
                "spanish_keywords": {
                    "type": "keyword_marker",
                    "keywords": [
                        "ejemplo"
                    ]
                },
                "spanish_stemmer": {
                    "type": "stemmer",
                    "language": "light_spanish"
                }
            },
            "analyzer": {
                "rebuilt_spanish": {
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "spanish_stop",
                        "spanish_keywords",
                        "spanish_stemmer"
                    ]
                }
            }
        }
    },
    "mappings": {
        "testlogstash": {
            "dynamic": true,
            "properties": {
                "descriptor": {
                    "type": "text",
                    "analyzer": "rebuilt_spanish",
                    "search_analyzer": "rebuilt_spanish"
                },
                "precio": {
                    "type": "text"
                },
                "fecha_inicio": {
                    "type": "date"
                },
                "fecha_final": {
                    "type": "date"
                },
                "idEnDB": {
                    "type": "long"
                },
                "consideraciones": {
                    "type": "keyword"
                }
            }
        }
    }
}