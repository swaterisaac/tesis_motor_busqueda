{
    "index_patterns": [
        "testlogstash*"
    ],
    "settings": {
        "analysis": {
            "filter": {
                "spanish_stop": {
                    "type": "stop",
                    "stopwords": "_spanish_"
                },
                "spanish_keywords": {
                    "type": "keyword_marker",
                    "keywords": [
                        "ejemplo"
                    ]
                },
                "spanish_stemmer": {
                    "type": "stemmer",
                    "language": "light_spanish"
                }
            },
            "analyzer": {
                "default": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "spanish_stop",
                        "spanish_keywords",
                        "spanish_stemmer"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "descriptor": {
                "type": "text",
                "analyzer": "default",
                "search_analyzer": "default"
            },
            "precio": {
                "type": "text"
            },
            "fecha_inicio": {
                "type": "date"
            },
            "fecha_final": {
                "type": "date"
            },
            "idEnDB": {
                "type": "long"
            },
            "consideraciones": {
                "type": "keyword"
            }
        }
    }
}